from ev3dev.core import UltrasonicSensor


class EdgeAvoider(Action):
    
    def __init__(self, colors):
        self.color = 1      
        self.driveActions = [DriveData(100, 0), DriveData(0, 40)]
        
        self.cs = ColorSensor()
        self.us = UltrasonicSensor()
        self.us.mode = 'US-DIST-CM'
    
    def triggered(self):
        return self.cs.color is self.color
    
    def execute(self):
        for a in self.driveActions:
            a.drive()
