	#!/usr/bin/env python3
	
	
	def run():
	    for t in tasks:
	        t.execute()
	
	
	print("Starting brick 1")
	
	tasks = []
	«FOR t : mission.tasks SEPARATOR ","»
		
	«ENDFOR»
	run()
'''

