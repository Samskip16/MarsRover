grammar mars.ru.des.robot.TaskDSL with org.eclipse.xtext.common.Terminals

generate taskDSL "http://www.ru.mars/des/robot/TaskDSL"

Task: 'Task:' name = ID
	action = Action;
	

Action: 'action:'
	DriveUntil | Investigate | Speak | FollowLine
;

Detectors:
	
;

DriveUntil: 'Drive' 
	(speed = Speed)?
	'Until'
	object = Object
	'Found'
;

Investigate: 'Investigate'
	speed = Speed
;

Speak: 'Speak'
	text = STRING
;

FollowLine: 'FollowLine' 'for'
	distance = INT 'meters'
;

Avoid: 
	object = Object
	'By'
	avoidAction += AvoidAction+
	
;

AvoidAction:
	
;

MoveBack: 'MoveBackwards'
	distance = INT 'meters'
;

Turn: 'Turn'
	degrees = INT 'degrees'
;


enum Object:
	ROCK | LAKE
;

enum Speed:
	FAST | SLOW
;